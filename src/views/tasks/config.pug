extends /layouts/application.pug

block content
  .row
    .col-lg-7.col-12
      +formFor(f, { name: 'Configuration', url: `/tasks/${task.id}/config`, method: 'post' })
        +input(f, 'name')
        +select(f, 'status', { items: statuses, selectId: task.statusId })
        +select(f, 'assignedTo', { items: userItems, selectId: task.assignedToId })
        +textarea(f, 'description')
        +button(f)

