extends /layouts/application.pug

block head
  title Tasks

block content
  .panel.panel-default
    .panel-heading= Tasks
    .panel-body
      if isSignedIn()
        +formFor(f, { name: 'Filters', url: urlFor('search'), method: 'get'})
          .d-inline-block
            +select(f, 'creator', { name: 'creator', items: userItems })
          .d-inline-block
            +input(f, 'tag', { name: 'tag', as: 'text'})
          .d-inline-block
            +select(f, 'status', { name: 'status', items: statuses })
          .d-inline-block
            +select(f, 'assignedTo', { name: 'assignedTo', items: userItems })
          .d-inline-block
            +button(f, 'Search')
    table.table.table-stripped
      thead
        tr
          th name
          th Description
          th Created At
      tbody
        each task in tasks
          tr
            td
              a.no-color(href=`/tasks/${task.id}`)= task.name
            td= task.description
            td= task.created
