extends /layouts/application.pug

block content
  .row
    .col-lg-7.col-12
      +formFor(f, { name: 'Create Task', url: urlFor('newTask'), method: 'post' })
        +input(f, 'name')
        +select(f, 'status', { items: statuses, selectId: 1 })
        +select(f, 'assignedTo', { items: userItems, selectId: id })
        +textarea(f, 'description')
        +button(f)

